{
  "manifest_version": 2,

  "name": "Tlushim automation",
  "description": "Automate tlushim actions",
  "version": "1.0",

  "icons": {
    "16":"icon.png",
    "48":"icon.png",
    "128":"icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "client/index.html",
    "default_title": "Click here!"
  },
  "background":{
    "scripts": [
      "node_modules/angular/angular.js"
    , "client/js/app.js"
      , "client/js/tlushimApi.js"
      , "client/js/notificationService.js"
      , "client/js/chromeApi.js"
      , "client/js/managerService.js"
      , "client/js/background.js"
    ]
  },
  "permissions": [
    "activeTab"
    , "storage"
    , "alarms"
    , "https://www.tlushim.co.il/*"
  ]
}